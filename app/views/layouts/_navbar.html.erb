<!--ナビバー-->
<header>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-left" href="/"><img src="/images/logo.png" alt="Monolist"></a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
<!-- ログイン後のナビバー　-->          
          <% if logged_in? %> <!-- => 仮定メソッド -->
            <li>
              <%= link_to new_item_path do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                アイテムを追加
              <% end %>
            </li>
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
                ランキング
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Wantランキング', rankings_want_path %></li>
                <li><%= link_to 'Haveランキング', rankings_have_path %></li>
              </ul>
            </li>
            
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="gravatar">
                  <img src="<%= gravatar_url(current_user, size: 20) %>" alt="" class="img-circle">
                </span>
                <%=  current_user.name %> <!--仮定メソッド => current_user-->
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'マイページ', user_path(current_user) %> <!--マイページのリンク--> <!--仮定メソッド => current_user-->
                </li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to '新規登録', signup_path %></li> <!-- => 新規登録のリンク -->
            <li><%= link_to 'ログイン', login_path %></li>　<!-- => ログインのリンク -->
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>













